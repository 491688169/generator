{
    "name": "generator-learnta",
    "version": "0.0.4",
    "description": "generator-learnta",
    "homepage": "https://code.learnta.cn/projects/LTA/repos/generator-learnta/browse",
    "files": [
        "generators"
    ],
    "keywords": [
        "yeoman-generator"
    ],
    "test": "1",
    "main": "index.js",
    "author": "qianjin<491688169@qq.com>",
    "devDependencies": {
        "commitizen": "^3.1.1",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^3.6.0",
        "eslint-config-xo": "^0.25.1",
        "eslint-plugin-prettier": "^3.1.0",
        "henry-validate-commitmsg": "0.0.5",
        "husky": "^1.3.1",
        "lint-staged": "^9.0.0",
        "prettier": "^1.18.2",
        "validate-commit-msg": "^2.14.0",
        "yeoman-assert": "^3.1.1"
    },
    "engines": {
        "npm": ">= 4.0.0"
    },
    "dependencies": {
        "chalk": "^2.4.2",
        "henry-yo-merge": "0.0.2",
        "yeoman-merge-ui": "^1.1.0",
        "yosay": "^2.0.2"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ],
        "*.json": [
            "prettier --write",
            "git add"
        ]
    },
    "scripts": {
        "precommit": "lint-staged",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
    },
    "eslintConfig": {
        "extends": [
            "xo",
            "prettier"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "prettier/prettier": "error"
        },
        "plugins": [
            "prettier"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "henry-validate-commitmsg"
        }
    },
    "license": "ISC",
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        },
        "henry-validate-commitmsg": {
            "scope": {
                "required": true,
                "allowed": [
                    "^[A-Z]+-[0-9]$",
                    "config",
                    "app",
                    "ac",
                    "cs"
                ],
                "validate": true
            }
        }
    }
}
